<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <h1><%= title %></h1>
        <ul>
            <% messages.forEach((message) => { %>
                <li>
                    <%- message.username %> sent "<%- message.text %>" at <%= message.added %>
                    <a href="/message/<%= message.id %>">
                        <button type="button">Open</button>
                    </a>
                    <a href="/message/<%= message.id %>/edit">
                        <button type="button">Edit Message</button>
                    </a>
                    <form action="/message/<%= message.id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete Message</button>
                    </form>
                </li>
            <% }); %>
        </ul>

        <a href="/new">Create new message</a>
    </body>
</html>